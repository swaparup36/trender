generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventType {
  HYPE
  UNHYPE
}

enum OrderType {
  BUY
  SELL
}

model Post {
  id          Int      @id @default(autoincrement())
  userPubKey  String
  title       String
  content     String
  publishedAt DateTime @default(now())
  events      Event[]
  orders      Orders[]
}

model Event {
  id         Int       @id @default(autoincrement())
  postId     Int
  post       Post      @relation(fields: [postId], references: [id])
  eventType  EventType
  userPubKey String
  amount     BigInt
  price      Float
  totalCost  Float
  timestamp  DateTime
}

model Orders {
  id          Int      @id @default(autoincrement())
  userPubKey  String
  postId      Int
  post        Post     @relation(fields: [postId], references: [id])
  orderType   OrderType
  amount      BigInt
  price       Float
  totalCost   Float
  createdAt   DateTime @default(now())
}
